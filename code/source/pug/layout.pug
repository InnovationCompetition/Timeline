doctype html
html
  head
    title timeline
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- Angular Material style sheet
    link(rel='stylesheet', href='../css/angular-material.min.css')
  body(ng-app='Layout', layout='column', md-theme='default', ng-cloak, ng-controller='layoutController as lc')
    md-content(layout='column')
      md-toolbar
        div.md-toolbar-tools
          md-button.md-icon-button(aria-label='Back', ng-click='lc.goBack()' ng-show='enableBack')
            md-icon(md-svg-icon='../svg/back.svg')
          h2
            span {{header}}
          span(flex)
          md-button.md-icon-button(aria-label='Myself', ng-click='lc.navigateTo("myself")', ng-show='enableRoute')
            md-icon(md-svg-icon='{{lc.svgs.myself}}')
          md-button.md-icon-button(aria-label='Others', ng-click='lc.navigateTo("others")', ng-show='enableRoute')
            md-icon(md-svg-icon='{{lc.svgs.others}}')
          md-button.md-icon-button(aria-label='Search', ng-show='enableRoute')
            md-icon(md-svg-icon='../svg/search.svg')
      md-content.fullscreen(ui-view, flex, id="fullscreen")
    //- Angular Material requires Angular.js Libraries
    script(src='../js/angular.min.js')
    script(src='../js/angular-animate.min.js')
    script(src='../js/angular-aria.min.js')
    script(src='../js/angular-messages.min.js')
    script(src='../js/angular-ui-router.min.js')
    //- Angular Material Library
    script(src='../js/angular-material.min.js')
    //- 自己的应用引导
    script(src='../js/myself.js')
    script(src='../js/others.js')
    script(src='../js/layout.js')
    script(src='../js/pictures.js')
    script(src='../js/punchedCard.js')
    script(src='../js/relationship.js')
    script(src='../js/timeline.js')
    script(src='../js/photo.js')
    script(src='../js/newPost.js')
